<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="ar.edu.ort.apptivo.MainActivity">
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Email:"
    android:id="@+id/textView2"
    android:layout_marginTop="64dp"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/edtMail"
    android:hint="juan@gmail.com"
    android:layout_below="@+id/textView2"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="ContraseÃ±a:"
    android:id="@+id/textView3"
    android:layout_marginTop="29dp"
    android:layout_below="@+id/edtMail"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width="100dp"
    android:layout_height="55dp"
    android:text="Ingresar"
    android:id="@+id/btnIngreso"
    android:layout_alignParentStart="true"
    android:layout_marginTop="47dp"
    android:layout_below="@+id/textView3" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:text="Continuar como invitado (*)"
    android:id="@+id/btnInvitado"
    android:layout_alignTop="@+id/btnIngreso"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="(*) Si continua como invitado no podra acceder a su ubicacion actual"
    android:id="@+id/textView"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Registrar"
    android:id="@+id/txtRegistrar"
    android:textColor="#1e5fd7"
    android:layout_below="@+id/btnIngreso"
    android:layout_alignParentStart="true"
    android:layout_marginTop="35dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/edtPass"
    android:hint="********"
    android:layout_below="@+id/textView3"
    android:layout_alignEnd="@+id/edtMail" />
</RelativeLayout>

